{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es7", "es2018"],
    "noEmit": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  }
}
